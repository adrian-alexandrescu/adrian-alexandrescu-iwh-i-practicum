//- views/updates.pug
doctype html
html
  head
    meta(charset="utf-8")
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    a(href="/") Return to the homepage
    h1= title
    form(method="post", action="/update-cobj")
      label(for="name") Name
      input#name(type="text", name="name", required)

      label(for="size") size
      input#size(type="text", name="size", required)

      label(for="type") type
      input#type(type="text", name="type", required)

      button(type="submit") Create Record
